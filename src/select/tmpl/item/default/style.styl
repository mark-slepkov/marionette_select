[data-module="select"][data-application="item"][data-template="default"]
    text-align: center
    font-family: Arial, sans-serif
    display: block;
    position: relative;
    border: none
    width: 100%
    min-height: 100%
    box-sizing: border-box
    border-bottom: 1px solid rgba(0,0,0,0.1)
    cursor: pointer
    &:not([disabled])
        &:hover
            background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1));
    &:nth-last-child(1)
        border-bottom: none;